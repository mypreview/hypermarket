{
	"name": "mypreview/hypermarket",
	"type": "wordpress-theme",
	"description": "#1 Flexible WooCommerce Theme.",
	"keywords": [
		"WordPress",
		"Themes"
	],
	"homepage": "https://mypreview.github.io/hypermarket",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "MyPreview",
			"homepage": "https://www.mypreview.one"
		}
	],
    "config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"php": ">=7.4"
	},
    "archive": {
		"exclude": [
			"!/build",
			"!/languages",
			"!/style.css",
            "!/style-rtl.css",
			"/src",
            "CONTRIBUTING.md",
            "CODE_OF_CONDUCT.md",
			"babel.config.js",
			"composer.json",
			"composer.lock",
			"package.json",
			"package-lock.json",
			"phpcs.xml.dist",
			"README.md",
			"renovate.json",
			"node_modules",
			"vendor",
			".husky",
			".stylelintrc.js",
			".stylelintignore",
			".editorconfig",
			".gitattributes",
			".gitignore",
			".github",
			".browserslistrc",
			".eslintrc.js",
			".prettierrc.js",
			".wp-env.json",
			"webpack.config.js",
            "hypermarket.zip",
            ".*"
		]
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "3.6.2",
		"wptrt/wpthemereview": "^0.2.1",
		"wp-coding-standards/wpcs": "2.3.0",
        "woocommerce/woocommerce-sniffs": "0.1.2",
        "woocommerce/woocommerce-git-hooks": "1.0.5",
		"phpcompatibility/php-compatibility": "9.3.5",
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"wp-cli/i18n-command": "^2.2.6"
	},
	"scripts": {
        "pre-update-cmd": [
			"WooCommerce\\GitHooks\\Hooks::preHooks"
		],
		"pre-install-cmd": [
			"WooCommerce\\GitHooks\\Hooks::preHooks"
		],
		"post-install-cmd": [
			"WooCommerce\\GitHooks\\Hooks::postHooks"
		],
		"post-update-cmd": [
			"WooCommerce\\GitHooks\\Hooks::postHooks"
		],
		"phpcs": [
			"phpcs --extensions=php -s -p --runtime-set testVersion 7.4-"
		],
		"phpcbf": [
			"phpcbf --extensions=php -p --runtime-set testVersion 7.4-"
		],
        "make-pot": [
			"wp i18n make-pot . languages/hypermarket.pot --exclude=build"
		]
	}
}
